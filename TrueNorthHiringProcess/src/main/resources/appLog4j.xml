<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
	<!-- If the LogWrapper is being used, this Render should be present. -->
	<renderer renderedClass="com.ar.ssc.common.logging.LogEvent" renderingClass="com.ar.ssc.common.logging.SpringObjectRenderer" />

	<!-- Any asscication super-class Objects that are logged should have a registered 
		Renderer. -->
	<!--<renderer renderedClass="com.ssc.wb.common.util.log.LoggingSample" renderingClass="com.ssc.wb.common.util.log.SpringObjectRenderer"/> -->

	<appender name="AR_LOG_DEBUG" class="org.apache.log4j.RollingFileAppender">
		<param name="maxFileSize" value="5000KB" />
		<param name="maxBackupIndex" value="10" />
		<param name="File" value="${log4jXmlPath}/nec/process/ssc-debug.log" />
		<param name="append" value="true" />
		<param name="Threshold" value="debug" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d [%t] %-5p %c - %m%n" />
		</layout>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMin" value="debug" />
			<param name="LevelMax" value="debug" />
		</filter>
	</appender>


	<appender name="AR_LOG_INFO" class="org.apache.log4j.RollingFileAppender">
		<param name="maxFileSize" value="5000KB" />
		<param name="maxBackupIndex" value="10" />
		<param name="File" value="${log4jXmlPath}/nec/process/ssc-info.log" />
		<param name="append" value="true" />
		<param name="Threshold" value="info" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{ISO8601} %-5p [%t] &lt;%c&gt; %m%n" />
		</layout>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMin" value="info" />
			<param name="LevelMax" value="info" />
		</filter>
	</appender>

	<appender name="AR_LOG_ERROR" class="org.apache.log4j.RollingFileAppender">
		<param name="maxFileSize" value="5000KB" />
		<param name="maxBackupIndex" value="10" />
		<param name="File" value="${log4jXmlPath}/nec/process/ssc-error.log" />
		<param name="append" value="true" />
		<param name="Threshold" value="error" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{ISO8601} %-5p [%t] &lt;%c&gt; %m%n" />
		</layout>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMin" value="error" />
			<param name="LevelMax" value="error" />
		</filter>
	</appender>

	<logger name="com.ar.ssc" additivity="false">
		<level value="DEBUG" />
		<appender-ref ref="AR_LOG_DEBUG" />
		<appender-ref ref="AR_LOG_ERROR" />
		<appender-ref ref="AR_LOG_INFO" />
	</logger>
	
	<logger name="org.hibernate" additivity="false">
		<level value="ERROR" />
	</logger>
	<logger name="org.hibernate.SQL" additivity="false">
		<level value="ERROR" />
	</logger>
	<logger name="org.springframework" additivity="false">
		<level value="ERROR" />
	</logger>
	<logger name="org.apache.struts" additivity="false">
		<level value="ERROR" />
	</logger>
	<logger name="org.apache.commons" additivity="false">
		<level value="ERROR" />
	</logger>
	<logger name="com.opensymphony" additivity="false">
		<level value="ERROR" />
	</logger>

	<logger name="org.apache.struts2" additivity="false">
		<level value="ERROR" />
	</logger>

	<logger name="org.springframework.web.context.ContextLoader"
		additivity="false">
		<level value="FATAL" />
	</logger>
	
	<logger name="org.apache.tiles" additivity="false">
		<level value="ERROR" />
	</logger>
	
	<logger name="com.opensymphony.xwork2.util.DomHelper" additivity="false">
		<level value="ERROR" />
	</logger>
	
	
	
</log4j:configuration>

